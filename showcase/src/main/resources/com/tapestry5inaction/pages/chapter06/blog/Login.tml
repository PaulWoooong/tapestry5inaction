<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">

    <form t:type="form" t:id="loginForm" clientValidation="false">
        <t:errors/>
        <div>
            <label t:type="label" for="userName"/>
            <input t:type="textfield" t:id="userName" size="20"/>
        </div>

        <div>
            <label t:type="label" for="password"/>
            <input t:type="passwordfield" t:id="password" size="20"/>
        </div>

        <div>
            <input type="submit" value="${message:submit-value}" />
        </div>
    </form>

</html>